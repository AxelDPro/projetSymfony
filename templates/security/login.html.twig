{% extends 'base.html.twig' %}

{% block title %} Connexion !{% endblock %}

{% block body %}
<form method="post" id="formulaire">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connectez en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_deconnexion') }}">Deconnexion</a>
        </div>

        {% else %}

        <a href="{{path('app_connexion')}}">Connexion<span class="sr-only">(current)</span> </a>
    {% endif %}
    </span>

    <h1 class="h3 mb-3 font-weight-normal">S'il vous plaît Connectez-vous</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary" type="submit">
        Connectez-Vous
    </button>
</form>

 {% if is_granted('ROLE_ADMIN') %} 

        <li class="active">
        <a href="{{path('app_admin')}}">Admin
        <span cass="sr-only"(current)</span>
        </a>
        </li>

        {% endif %}

{% endblock %}

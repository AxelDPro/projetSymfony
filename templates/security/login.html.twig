{% extends 'base.html.twig' %}

{% block title %} Connexion !{% endblock %}

{% block body %}
<form method="post" id="formulaire" class="mt-5">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            <h3>Vous êtes connecté(e) en tant que {{ app.user.userIdentifier }}.</h3>
            
        </div>

        {% else %}

        <a href="{{path('app_connexion')}}"><span class="sr-only">(current)</span> </a>
    {% endif %}
    </span>
<div class="col-12">
    <div class="row">
    <h1 class="h3 mb-3 font-weight-normal text-align-center">Se connecter</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
    value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary mt-4" type="submit">
        Connectez-Vous
    </button>
</form>

    </div>
</div>
    


{% endblock %}
